{
  "name": "@parleweb.com/plw-components",
  "description": "Vue internal components",
  "author": "parleweb.com",
  "repository": "github.com:parleweb/plw-components",
  "version": "0.1.4",
  "private": false,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "npm run build:lib & npm run build:wc",
    "lint": "vue-cli-service lint",
    "build:lib": "vue-cli-service build --target lib --name plw-components --no-clean src/plugin.js",
    "build:wc": "vue-cli-service build --target wc --name plw-components --no-clean src/components/*.vue"
  },
  "main": "src/plugin.js",
  "main2": "dist/plw-components.common.js",
  "unpkg": "dist/plw-components.min.js",
  "dependencies": {
    "core-js": "^3.6.5",
    "vue": "^2.6.11"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.2.2",
    "vue-template-compiler": "^2.6.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}